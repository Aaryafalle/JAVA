public class array {
        public static void main(String[] args) {
            //-declaration and then memory allocation
            System.out.println("declaration and then memory allocation is");
            int [] marks;
            marks = new int[5];
            marks [0] = 29;
            marks [1] = 24;
            marks [2] = 12;
            marks [3] = 25;
            marks [4] = 49;

            System.out.println(marks[3]);
//output
